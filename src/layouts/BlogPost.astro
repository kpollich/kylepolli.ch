---
import { format } from "date-fns";
import type { CollectionEntry } from "astro:content";

import BaseHead from "../components/BaseHead.astro";
import Navigation from "../components/Navigation.astro";
import Spacer from "../components/Spacer.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, subtitle, date } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={subtitle} />
  </head>

  <body>
    <Navigation />

    <main class="flex flex-col min-h-screen px-4 md:px-16">
      <div>
        <h1 class="max-w-4xl text-6xl font-bold">{title}</h1>

        <Spacer size="xs" />

        <h2 class="text-xl">{subtitle}</h2>

        <time datetime={date.toString()} class="mb-1 text-gray-400 text-s">
          {format(date, "LLLL d, yyyy")}
        </time>
      </div>

      <Spacer size="medium" />

      <article class="prose prose-lg prose-neutral dark:prose-invert">
        <slot />
      </article>
    </main>
  </body>
</html>
